{
  "manifest_version": 3,

  "name": "Snowplow Inspector",
  "description": "Add a new tab in Developer Tools to show Snowplow Analytics beacon information.",
  "version": "0.2.26",
  "action": {
    "browser_style": true,
    "default_title": "Snowplow Inspector",
    "default_popup": "popup.html",
    "default_icon": {
      "280": "poplin.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "poplin-16.png",
    "48": "poplin-48.png",
    "128": "poplin-128.png",
    "280": "poplin.png"
  },
  "author": "Poplin Data",
  "minimum_chrome_version": "88.0",
  "devtools_page": "devtools.html",
  "permissions": ["storage"],
  "host_permissions": ["https://iglucentral.com/*"],
  "content_scripts": [
    {
      "matches": ["https://console.snowplowanalytics.com/*/*"],
      "js": ["content_scripts/console.js"],
      "run_at": "document_start"
    }
  ],
  "optional_host_permissions": ["*://*/*"]
}

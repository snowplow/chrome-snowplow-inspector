{
  "name": "chrome-snowplow-inspector",
  "version": "0.3.9",
  "description": "Add a panel to DevTools to show Snowplow analytics beacon information.",
  "scripts": {
    "test": "tsc --noEmit && prettier -c src",
    "fmt": "prettier -w src",
    "clean": "rm -r dist snowplow-chrome-extension.zip || true",
    "prestart": "npm run clean",
    "start": "node build.mjs",
    "preprepare": "npm test && npm run clean",
    "prepare": "node build.mjs",
    "prexpi": "npm install",
    "xpi": "npx web-ext build --overwrite-dest -s dist/ -a .",
    "prexpi-signed": "npm install",
    "xpi-signed": "npx web-ext sign -s dist/ -a .",
    "prezip": "npm install",
    "zip": "zip -r snowplow-chrome-extension.zip dist/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/snowplow/chrome-snowplow-inspector.git"
  },
  "author": "Snowplow Australia",
  "license": "SEE LICENSE IN LICENSE.md",
  "bugs": {
    "url": "https://github.com/snowplow/chrome-snowplow-inspector/issues"
  },
  "homepage": "https://github.com/snowplow/chrome-snowplow-inspector",
  "dependencies": {
    "@fontsource/inter": "^5.2.6",
    "@fontsource/roboto": "^5.0.0",
    "@fontsource/rubik": "^5.0.0",
    "@snowplow/browser-tracker": "^4.3.1",
    "canonicalize": "^2.0.0",
    "jsonschema": "1.*",
    "preact": "^10.25.4"
  },
  "devDependencies": {
    "@craftamap/esbuild-plugin-html": "^0.9.0",
    "@snowplow/signals-core": "^0.2.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/chrome": "*",
    "@types/elasticsearch": "^5.0.36",
    "@types/har-format": "1.*",
    "@types/node": "*",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.9",
    "esbuild-postcss": "^0.0.4",
    "lucide-preact": "^0.544.0",
    "lucide-static": "^0.544.0",
    "postcss": "^8.5.6",
    "prettier": "^3.0.2",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.0.0"
  }
}
